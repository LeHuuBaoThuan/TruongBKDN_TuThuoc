#include<lcd_user.h>

void lcd_user_init(CLCD_I2C_Name* LCD_user, I2C_HandleTypeDef* hi2c_CLCD_user, uint8_t Address_user, uint8_t Colums_user, uint8_t Rows_user)
{
	CLCD_I2C_Init(LCD_user, hi2c_CLCD_user, Address_user, Colums_user, Rows_user);
}

void display(int temp)
{
	if(temp==0)
	{
		// dislay hello ! Status_Display=0
		CLCD_I2C_SetCursor(&LCD1, 2, 0);
		CLCD_I2C_WriteString(&LCD1,"TRUONG DHBK-DHDN");

		CLCD_I2C_SetCursor(&LCD1, 4, 1);
		CLCD_I2C_WriteString(&LCD1,"KHOA CO KHI");

		CLCD_I2C_SetCursor(&LCD1, 3, 2);
		CLCD_I2C_WriteString(&LCD1,"T.N DO BEN MOI");

		CLCD_I2C_SetCursor(&LCD1, 2, 3);
		CLCD_I2C_WriteString(&LCD1,"Please Set Mode !");
	}
	else if(temp==1)
	{
		// dislay Select Mode ! Status_Display=1
		CLCD_I2C_SetCursor(&LCD1, 4, 0);
		CLCD_I2C_WriteString(&LCD1,"Select Mode");

		CLCD_I2C_SetCursor(&LCD1, 1, 1);
		CLCD_I2C_WriteString(&LCD1,"Select cycle");

		CLCD_I2C_SetCursor(&LCD1, 1, 2);
		CLCD_I2C_WriteString(&LCD1,"Until Cut");

		CLCD_I2C_SetCursor(&LCD1, 1, 3);
		CLCD_I2C_WriteString(&LCD1,"Exit");

	}
	else if(temp==2)
	{
		// dislay Select cycle ! Status_Display =2
		CLCD_I2C_SetCursor(&LCD1, 0, 0);
		CLCD_I2C_WriteString(&LCD1,"Temp : ");

		CLCD_I2C_SetCursor(&LCD1, 0, 1);
		CLCD_I2C_WriteString(&LCD1,"Diameter : ");

		CLCD_I2C_SetCursor(&LCD1, 0, 2);
		CLCD_I2C_WriteString(&LCD1,"Cycle : ");

		CLCD_I2C_SetCursor(&LCD1, 0, 3);
		CLCD_I2C_WriteString(&LCD1,"Start");

	}
	else if(temp==3)
	{
		// dislay Until Cut ! Status_Display = 3
		CLCD_I2C_SetCursor(&LCD1, 0, 0);
		CLCD_I2C_WriteString(&LCD1,"Temp : ");

		CLCD_I2C_SetCursor(&LCD1, 0, 1);
		CLCD_I2C_WriteString(&LCD1,"Diameter : ");

		CLCD_I2C_SetCursor(&LCD1, 0, 2);
		CLCD_I2C_WriteString(&LCD1,"Start");

		CLCD_I2C_SetCursor(&LCD1, 0, 3);
		CLCD_I2C_WriteString(&LCD1,"Exit");
	}
	else if(temp==4)
	{
		// dislay Main ! Status_Display = 4

	  CLCD_I2C_SetCursor(&LCD1, 3, 0);
	  CLCD_I2C_WriteString(&LCD1,"T.N DO BEN MOI");

	  CLCD_I2C_SetCursor(&LCD1, 0, 1);
	  CLCD_I2C_WriteString(&LCD1,"Counter:");
	  CLCD_I2C_SetCursor(&LCD1, 17, 1);
	  CLCD_I2C_WriteString(&LCD1,"(V)");

	  CLCD_I2C_SetCursor(&LCD1, 0, 2);
	  CLCD_I2C_WriteString(&LCD1,"Force : ");
	  CLCD_I2C_SetCursor(&LCD1, 17, 2);
	  CLCD_I2C_WriteString(&LCD1,"(N)");

	  CLCD_I2C_SetCursor(&LCD1, 0, 3);
	  CLCD_I2C_WriteString(&LCD1,"Temperature:");
	  CLCD_I2C_SetCursor(&LCD1, 17, 3);
	  CLCD_I2C_WriteString(&LCD1,"(T)");
	}
}
